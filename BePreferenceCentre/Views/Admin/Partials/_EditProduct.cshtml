@model BePreferenceCentre.DAL.InkeyProduct

<div class="card">
    <div class="card-header">
        Edit/Remove Products
    </div>
    <div class="card-body">
        @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.InkeyProductsId)
            <div class="form-group">
                <label class="col-sm-2 control-label">Product Name</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Product Image Link</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.ProductImageLink, new { @class = "form-control" })
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Product Link</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.ProductLink, new { @class = "form-control" })
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="row col-lg-12">
                <div class="col-lg-6">
                    <input type="submit" class="btn btn-primary" value="Update Product" />
                </div>
                <div class="col-lg-6">
                    <input type="button" class="btn btn-danger" value="Cancel" onclick="ShowNormalForm()" />
                </div>
            </div>

        }
    </div>

</div>